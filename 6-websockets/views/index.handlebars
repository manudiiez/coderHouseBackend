<section class="container-lg">
    <h1 class="text-center py-5">AÃ±adir un producto</h1>
    <form id="form">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="title"  aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Precio</label>
            <input type="number" class="form-control" name="price"  aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Url de la imagen</label>
            <input type="text" class="form-control" name="img"  aria-describedby="emailHelp">
        </div>
        <button type="submit" class="btn btn-primary">Crear</button>
    </form>
    
    <h1 class="text-center py-5">Lista de productos</h1>
    {{#if isEmpty}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img class="table__img" src={{this.img}} alt=""></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-danger" role="alert">
        No hay productos
    </div>
    {{/if}}
</section>