<%- layout('layouts/main.ejs') %>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>SignIn</h3>
            </div>
            <div class="card-body">
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="insert email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control mt-2" name="password" placeholder="Insert Password">
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-4">Send</button>
                </form>
            </div>
        </div>
</div>